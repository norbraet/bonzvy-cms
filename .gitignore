# Ignore the WordPress core files and directories
wp-admin/
wp-includes/
wp-content/upgrade/

# Ignore the wp-content directory except for plugins and uploads
wp-content/*
!wp-content/plugins/
!wp-content/uploads/

# Ignore configuration and sensitive files
wp-config.php
wp-config-sample.php
.htaccess

# Ignore local development environment files
*.log
*.sql
*.tar.gz
*.zip
*.bak
*.swp
*.swo
.DS_Store
Thumbs.db

# Ignore Docker and environment configuration files (optional)
docker-compose.override.yml
.env

# Ignore temporary files
*.tmp

# Ignore backups and archives
*.bak
*.backup
*.gz
*.tar
*.tgz

# Ignore PHPUnit cache files (if you use PHPUnit for testing)
phpunit.xml
phpunit.xml.dist
test/

# Ignore IDE files (if you're using VSCode, Sublime, PhpStorm, etc.)
.vscode/
.idea/
*.sublime-workspace
*.sublime-project

# Ignore Composer vendor folder (if using Composer)
vendor/
